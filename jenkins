pipeline {
    agent any
    tools {
        maven 'Maven 3.8.3'
        ant 'Ant 1.10.11'
        jdk 'jdk11'
    }

    stages {
        stage('Initialize') {
            steps {
                echo 'installing maven'
                bat 'mvn clean install'
                echo 'Successfully installed maven'
                }
            }
        stage('Test') {
            steps {
                echo 'Testing..'
                bat 'mvn test'
                echo 'Test done'
             }
            }
        }
        post {
            always {
                junit 'test-report/*.xml'
             }
        }
    }
