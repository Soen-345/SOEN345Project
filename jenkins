pipeline {
    agent any
    tools {
        maven 'Maven 3.8.3'
        ant 'Ant 1.10.11'
        jdk 'jdk 17'
    }

    stages {
        stage('Build') {
            steps {
                echo 'installing maven'
                bat 'mvn spring-javaformat:apply'
                bat 'mvn clean install'
                echo 'Successfully installed maven'
                }
            }
        stage('Test') {
            steps {
                echo 'Testing..'
                bat 'mvn test'
                echo 'Test done'
             }
            }
        stage('Generate reports') {
            steps {
                echo '...generating code coverage report...'
                bat 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
                echo '...generating static analysis report...'
                bat 'mvn checkstyle:checkstyle -Dcheckstyle.report.formal=xml'
                echo 'Reports generated successfully'
            }
            }
        }
        post {
            always {
                junit 'target/surefire-reports/*.xml'
                cobertura autoUpdateHealth: false, autoUpdateStability: false, coberturaReportFile: '**/target/site/cobertura/coverage.xml', failUnhealthy: false, failUnstable: false, maxNumberOfBuilds: 0, onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false
                recordIssues(tools: [checkStyle(pattern: '**/target/checkstyle-result.xml')])
             }
        }
    }
